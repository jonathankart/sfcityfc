<h3 class="pageTitle">Upcoming Events</h3>


{% for e in events %}
    <div class="event">
        {{ e.when|date('n/d g:ia') }} - {{ e.title }}
        {% if e.where !='' %}
            @ <a href="http://maps.google.com/maps?q={{ e.where }}">{{ e.where }}</a>
        {% endif %}

        {% if e.description !='' %}
            <a href="#" class="eventMore softScript" data-event-index="{{ loop.index }}">more...</a>
            <div class="eventDetails {{ loop.index }}" style="display: none">{{ e.description }}</div>
        {% endif %}
    </div>
{% endfor %}

